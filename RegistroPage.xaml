<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dam.mvvm.sqlite.RegistroPage"
             Title="RegistroPage">
    <VerticalStackLayout>

        <Entry Placeholder="Nombre de Usuario" Text="{Binding Usuario}" />
        <Entry Placeholder="Contraseña" IsPassword="True" Text="{Binding Password}" />
        <Entry Placeholder="Correo Electrónico" Text="{Binding Email}" />
        <Button Text="Registrar" Command="{Binding RegistrarComando}" />
        <Button Text="Ya tengo cuenta" Command="{Binding NavegarLoginComando}" />
    </VerticalStackLayout>
</ContentPage>