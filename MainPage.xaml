<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dam.mvvm.sqlite.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,50,30,50"
            Spacing="20"
            BackgroundColor="#f5f5f5">

            <Image
                Source="administrador.png"
                HeightRequest="150"
                Aspect="AspectFit"
                HorizontalOptions="Center"
                Margin="0,20,0,10" />

            <Label
                Text="¡Bienvenido!"
                FontSize="28"
                FontAttributes="Bold"
                TextColor="#333"
                HorizontalOptions="Center" />

            <Label
                Text="Control Administrativo"
                FontSize="18"
                TextColor="#555"
                HorizontalOptions="Center"
                Margin="0,0,0,10" />

            <!-- Botón Registrarse con sombra -->
            <Button
                x:Name="Registrate"
                Text="REGÍSTRATE"
                Clicked="Registrate_Clicked"
                HorizontalOptions="Center"
                WidthRequest="220"
                BackgroundColor="#007BFF"
                TextColor="White"
                CornerRadius="20"
                Padding="10"
                FontSize="16">
                <Button.Shadow>
                    <Shadow Brush="Black" Opacity="0.5" Offset="5,5" />
                </Button.Shadow>
            </Button>

            <!-- Botón Ya tienes cuenta con sombra -->
            <Button
                x:Name="TieneUnaCuenta"
                Text="¿YA TIENES UNA CUENTA?"
                Clicked="TieneUnaCuenta_Clicked"
                HorizontalOptions="Center"
                WidthRequest="220"
                BackgroundColor="#28A745"
                TextColor="White"
                CornerRadius="20"
                Padding="10"
                FontSize="16">
                <Button.Shadow>
                    <Shadow Brush="Black" Opacity="0.5" Offset="5,5" />
                </Button.Shadow>
            </Button>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
