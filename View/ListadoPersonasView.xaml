<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="dam.mvvm.sqlite.View.ListadoPersonasView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="ListadoPersonasView">
    <VerticalStackLayout>
        <Label
            HorizontalOptions="Center"
            Text="Lista de usuarios registrados"
            VerticalOptions="Center" />

        <ListView ItemsSource="{Binding Personas4}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell
                        Detail="{Binding Edad}"
                        DetailColor="Tomato"
                        Text="{Binding Nombre}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


    </VerticalStackLayout>
</ContentPage>