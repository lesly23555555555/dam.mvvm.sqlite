<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dam.mvvm.sqlite.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout>
        <!-- Campos de entrada de usuario y contraseña -->
        <Entry Placeholder="Correo" Text="{Binding Email}" />
        <Button Text="Recuperar Contraseña" Command="{Binding OlvidoPasswordCommand}" />

    </VerticalStackLayout>
</ContentPage>